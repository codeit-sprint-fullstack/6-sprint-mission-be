generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id            String    @id @default(cuid())
  title         String
  content       String
  images        String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  favoriteCount Int       @default(0)
  userId        String
  user          User      @relation("UserArticles", fields: [userId], references: [id])
  favoriteUsers User[]    @relation("UserFavoriteArticles")
  comments      Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  articleId String?
  article   Article? @relation(fields: [articleId], references: [id])
  Item      Item?    @relation(fields: [itemId], references: [id])
  itemId    String?
}

model Item {
  id            String    @id @default(cuid())
  name          String
  description   String
  price         Int
  images        String[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  tags          String[]
  favoriteCount Int       @default(0)
  favoriteUsers User[]    @relation("UserFavoriteItems")
  userId        String
  user          User      @relation("UserItems", fields: [userId], references: [id])
  comments      Comment[]
}

model User {
  id                String    @id @default(cuid())
  nickname          String    @unique
  createdAt         DateTime  @default(now())
  email             String    @unique
  password String
  image             String
  refreshToken      String?
  updatedAt         DateTime  @updatedAt
  favoriteItems     Item[]    @relation("UserFavoriteItems")
  favoriteArticles  Article[] @relation("UserFavoriteArticles")
  articles          Article[] @relation("UserArticles")
  items             Item[]    @relation("UserItems")
  comments          Comment[]
}
